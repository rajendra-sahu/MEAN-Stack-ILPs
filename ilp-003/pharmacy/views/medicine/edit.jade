doctype
html
  head
    title Edit existing medicine
  body
    h3 Medicine Details
    form(id='form', method='post', action='/medicine/edit/#{medicine.id}')
      label(for='name') Name 
      input(type='text', id='name', name='name', value='#{medicine.name}')
      <br/><br/>
      label(for='manufacturer') Manufacturer 
      input(type='text', id='manufacturer', name='manufacturer', value='#{medicine.manufacturer}')
      <br/><br/>
      label(for='type') Type 
      input(type='text', id='type', name='type', value='#{medicine.type}')
      <br/><br/>
      label(for='batchno') Batchno
      input(type='text', id='batchno', name='batchno', value='#{medicine.batchno}')
      <br/><br/>
      label(for='expdate') Expdate
      input(type='text', id='expdate', name='expdate', value='#{medicine.expdate}')
      <br/><br/>
      label(for='price') Price 
      input(type='text', id='price', name='price', value='#{medicine.price}')
      <br/><br/>
      input(type='submit', value='Update Medicine')
